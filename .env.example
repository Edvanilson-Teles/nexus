# Copy this file to .env and fill with real values (do NOT commit secrets)

# Application
PORT=3000
NODE_ENV=development

# Database configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=nexus_user
DB_PASSWORD=nexus_password
DB_DATABASE=nexus_db
# Or provide a full connection string:
DATABASE_URL=postgresql://nexus_user:nexus_password@localhost:5432/nexus_db

# SSL options (for production/cloud databases)
DB_SSL=false
DB_REJECT_UNAUTHORIZED=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this
JWT_EXPIRES_IN=24h

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379

# Stripe Payment Integration (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# AWS S3 for file storage (optional)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Email service (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3001

# API URL
API_URL=http://localhost:3000
